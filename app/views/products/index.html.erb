<p id="notice"><%= notice %></p>

<h1>Listing Products</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Price</th>
      <th>Description</th>
      <th>Image url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
    <tr>

    <td><span class="product_title"><%= link_to product.title, product_path(product) %></td>
    <td><%= print_price(product.price)%></td>
    <td><%= product.description %></td>
    <td><%= image_tag "products/#{product.image_url}" %></td>
  </tr>
<% end %>
  </tbody>
</table>

<br>



<p><%= link_to "Create a New Product", new_product_path, id: "new_product" %></p>
