<p id="notice"><%= notice %></p>



<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Price</th>
      <th>Description</th>
      <th>Image url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
    <tr>
    <td><span class="product_title"><%= link_to product.title, product_path(product) %></td>
    <td><%= print_price(product.price)%></td>
    <td><%= print_stock(product.stock)%></td>
    <td><%= product.description %></td>
    <td><%= image_tag "products/#{product.image_url}" %></td>
    <td><%= button_to "Add to Cart", order_items_path(product_id: product.id) %></td>

  </tr>
<% end %>
  </tbody>
</table>

<br>
<%= link_to 'Create Product', new_product_path %>
